<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <!---뒤로가기 이미지버튼-->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back_btn" />

        <TextView
            android:text="약속잡기"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--완료 버튼-->
        <ImageButton
            android:src="@drawable/done_btn"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#D9E5FF"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:text="제목입력  :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:scrollbars="horizontal"
            android:layout_marginLeft="23dp"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#D9E5FF"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/time_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:text="시간"
            android:textSize="20dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <!--년 -->
                <Spinner
                    android:id="@+id/yearSpinner"
                    android:layout_width="102dp"
                    android:layout_height="25dp" />

                <!--월 -->
                <Spinner
                    android:id="@+id/monthSpinner"
                    android:layout_width="89dp"
                    android:layout_height="25dp" />

                <!--일 -->
                <Spinner
                    android:id="@+id/daySpinner"
                    android:layout_width="89dp"
                    android:layout_height="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <!--시-->
                <Spinner
                    android:id="@+id/hourSpinner"
                    android:layout_width="110dp"
                    android:layout_height="25dp" />
                <!--분-->
                <Spinner
                    android:id="@+id/minuteSpinner"
                    android:layout_width="89dp"
                    android:layout_height="25dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/friend_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"/>

        <TextView
            android:text="친구"
            android:layout_marginTop="10dp"
            android:layout_marginRight="170dp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--친구추가버튼-->
        <Button
            android:id="@+id/friendAdd"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="친구추가"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/place_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="170dp"
            android:layout_marginTop="10dp"
            android:text="장소"
            android:textSize="20dp"
            android:textStyle="bold" />

        <!--위치추가 버튼 추가-->
        <Button
            android:id="@+id/imageButton5"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginTop="13dp"
            android:text="위치추가"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#D9E5FF"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="14dp">

        <ImageView
            android:src="@drawable/list_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"/>

        <TextView
            android:text="메모"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--메모 공간-->
            <EditText
                android:layout_width="240dp"
                android:layout_height="140dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/back"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:lines="5"
                android:gravity="top"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#D9E5FF"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@drawable/checkbox_blank"
            android:id="@+id/checkboxBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="onClick1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"/>

        <ImageButton
            android:src="@drawable/checkbox"
            android:id="@+id/checkboxBtn2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="onClick2"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:text="약속 15분 전 자동 위치 전송(선택)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@drawable/checkbox_blank"
            android:id="@+id/checkboxBtn3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="onClick3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:src="@drawable/checkbox"
            android:id="@+id/checkboxBtn4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="onClick4"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="개인 정보 제공 동의(선택)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp" />

    </LinearLayout>

    <ImageView
        android:src="@drawable/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        />

</LinearLayout>